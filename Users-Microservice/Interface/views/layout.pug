doctype html
html(lang='en')
  head
    title PROBUM
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/w3.css')
    link(rel='stylesheet', href='/stylesheets/css.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/jquery.modal.min.css')
    link(rel='icon', href='/images/uminho.png')
    script(src='/javascripts/jquery-3.7.0.min.js')
    script(src='/javascripts/jquery.modal.min.js')
    script(src='/javascripts/views-aux.js')
    style.
      body,h1,h2,h3,h4,h5 {font-family: "Poppins", sans-serif}
      body {font-size:16px;}
      .w3-half img{margin-bottom:-6px;margin-top:16px;opacity:0.8;cursor:pointer}
      .w3-half img:hover{opacity:1}
      .container {
        display: flex;
        flex-direction: column;
      }
      .container input {
        margin-bottom: 10px;
      }
      .upload-container {
        position: relative;
      }
      .preview {
        position: relative;
        margin-bottom: 10px;
        width: 50%;
        height: auto;
      }
      .remove-button {
        position: relative;
        margin-left: 5%;
      }
     .tag {
        display: inline-block;
        background-color: #0366d6;
        color: #fff;
        padding: 5px 20px;
        margin-right: 5px;
        margin-bottom: 5px;
        border-radius: 3px;
        font-size: 16px;
        position: relative; /* Adicionado */
      }
      .remove-button-tag {
        background-color: transparent;
        border: none;
        color: #fff;
        font-size: 12px;
        cursor: pointer;
        position: absolute; /* Adicionado */
        top: 0; /* Posiciona no topo */
        right: 0; /* Posiciona na direita */
        padding: 2px; /* Ajusta o espa√ßamento interno */
      }
      .invisible {
        display: none;
      }
      .sticky {
        position:fixed;
        top: 0;
        width: 100%;
        z-index: 4;
      }
      input::file-selector-button {
        display: inline-block;
        padding: 8px 16px;
        vertical-align: middle;
        overflow: hidden;
        text-decoration: none;
        color: #000 !important;
        background-color: #f1f1f1 !important;
        text-align: center;
        border: 1px solid #ccc !important;
        cursor: pointer;
        white-space: nowrap;
      }
      .btn-container {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }
      .btn-container a {
        display: block;
        width: 308px;
        margin-bottom: 10px;
      }
      .btn-google,
      .btn-facebook,
      .btn-twitter {
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: #fff;
        border-radius: 4px;
        padding: 12px 24px;
        font-weight: bold;
        transition: background-color 0.3s;
      }
      .btn-google {
        border: 1px solid black;
        background-color: #fff;
        color: #000;
      }
      .btn-facebook {
        background-color: #1877F2;
      }
      .btn-twitter {
        background-color: #1DA1F2;
      }
      .btn-google:hover,
      .btn-facebook:hover,
      .btn-twitter:hover {
        opacity: 0.9;
      }
      .btn-icon { 
        margin-right: 10px;
      }
      .btn-icon img {
        width: 14px;
        height: 14px;
      }

      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      #main-content {
        flex: 1;
      }

      .footer {
        background-color: #f1f1f1;
        padding: 20px;
        box-sizing: border-box;
      }

      @media (min-height: 100vh) {
        .footer {
          position: static;
          margin-top: auto;
          padding-right: 58px;
        }
      }

  body
    block content
